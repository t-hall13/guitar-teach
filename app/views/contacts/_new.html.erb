
<div class= 'modal-fade'>
    <div class="modal-header black">
   <!--<button type="button"  id= 'modal-close' class= 'btn btn-default-sm' data-dismiss= "modal"  aria-label="Close" aria-hidden="true">x</button>-->
   <%= link_to "X", :back, class: 'btn btn-danger btn-sm' %>
   <h3 id="myModalLabel" class= 'black'>Contact</h3>
</div>
     <div class="modal-body">
             
             <%= form_for @contact do |f| %>
                        <div class= 'form-group black'>
                            <%= f.label :name %>
                            <%= f.text_field :name, required: true, class: 'form-control' %>
                        </div>
                        </br>
                        <div class= 'form-group black'>
                            <%= f.label :email %>
                            <%= f.email_field :email, required: true, class: 'form-control' %>
                        </div>
                        </br>
                        <div  class= 'form-group black'>
                            <%= f.label :message %>
                            <%= f.text_area :message, class: 'form-control' %>
                        </div>
                        <div class= 'hidden'>
                           <%= f.label :nickname %>
                           <%= f.text_field :nickname, hint:'leave this field blank' %>
                        </div>
                       
                            <%= f.submit 'Send Message', class: 'btn btn-primary' %>
                                        
                <% end %>
                    
            
     </div>
 
</div>



