<%- model_class = UserCourse -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd><%= @user_course.course_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user_course.user_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_courses_path, :class => 'btn btn-default'  %>
              
<% if current_user.is_admin %>              
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_course_path(@user_course), :class => 'btn btn-default' %>
<%= link_to 'Edit course Users', users_tenant_course_path(tenant_id: @course.tenant_id, id: @course.id), 
                                      :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_course_path(@user_course),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
              
            
